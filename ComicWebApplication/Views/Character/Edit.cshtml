@using ComicWebApplication.EditViewModels
@model EditCharacterViewModel

<div class="col-md-6 offset-3 mt-5 text-white">
    <div class="container mx-auto">
        <div class="container mb-5">
            <div class="flex rounded overflow-hidden shadow-md p-4 mt-5" style="background-color:rebeccapurple">
                <h4 class="text-center mb-3">Edytowanie postaci</h4>
                <form method="post" asp-action="Edit" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="Name">Nazwa postaci</label>
                        <input asp-for="Name" class="form-control mb-2">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Superpower">Umiejętności postaci</label>
                        <input asp-for="Superpower" class="form-control mb-2">
                        <span asp-validation-for="Superpower" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="Description">Opis postaci</label>
                        <input asp-for="Description" class="form-control mb-2">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="ImageURL">Zdjęcie postaci</label>
                        <input asp-for="ImageURL" type="file" class="form-control mb-2">
                        <span asp-validation-for="ImageURL" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2 float-end">
                        <button class="btn btn-primary" type="submit">Zatwierdź</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


                       