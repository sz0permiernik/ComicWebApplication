@using ComicWebApplication.ViewModel
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row text-white">
    <div class="col-md-6 offset-3">
        <div class="container mx-auto">
            <div class="container mb-5">
                <div class="flex rounded overflow-hidden shadow-md p-4 mt-5" style="background-color:rebeccapurple">
                    <h4 class="text-center mt-2">Zaloguj się</h4>
                    <div class="row">
                        <div class="col-md-8 offset-2">
                            <form asp-action="Login">
                                <div class="form-group mb-2">
                                    <label asp-for="Email" class="control-label">E-Mail</label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group mb-2">
                                    <label asp-for="Password" class="control-label">Hasło</label>
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group mt-2 mb-3 float-end">
                                    <button class="btn btn-primary btn-block" type="submit">Zaloguj</button>
                                    <a class="btn btn-danger" asp-controller="Home" asp-action="Index">Anuluj</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>